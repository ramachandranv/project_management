<div class="row sign_up_form">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <fieldset>
    <legend><h2>Sign up</h2></legend>
    <%= devise_error_messages! %>

    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.email_field :email, :class=>"xlarge" %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password, :class=>"xlarge" %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :password_confirmation %>
      <div class="input">
        <%= f.password_field :password_confirmation, :class=>"xlarge" %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.submit "Sign up", :class=>"btn primary sign_up" %>
    </div>
  </fieldset>
<% end %>

  <div class="devise_links">
    <%= render "links" %>
  </div>
</div> 
