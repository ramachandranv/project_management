= form_for [@project, @page] do |f|
  -if @page.errors.any?
    #errorExplanation
      %h3
        = pluralize(@page.errors.count, "error") 
        prohibited this post from being saved
      %ul
        - @page.errors.full_messages.each do |msg| 
          %li= msg
  .clearfix
    =f.label :title
    .input
      =f.text_field :title, :class => "xlarge"
  .clearfix
    =f.label :content
    .input
      =f.text_area :content, :class => "xlarge"
    .input
      =f.hidden_field :project_id
  .clearfix
    .input
      - if type == 'new'
        =f.submit "Create Page", :class => "btn primary"
      - else
        =f.submit "Update Page", :class => "btn primary" 
